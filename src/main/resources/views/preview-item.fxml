<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/14.0.2.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.polytech.sircus.controller.PreviewTimelineItemController">
    <children>
        <VBox fx:id="rulerContainer" alignment="TOP_RIGHT" maxHeight="35.0" prefHeight="35.0">
            <children>
                <Text fx:id="time" nodeOrientation="LEFT_TO_RIGHT" strokeType="OUTSIDE" strokeWidth="0.0" text="10s." textAlignment="RIGHT" />
                <HBox fx:id="ruler" alignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                    <children>
                        <Text fx:id="filename" strokeType="OUTSIDE" strokeWidth="0.0" text="filename" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <ImageView fx:id="imageView" fitHeight="82.0" fitWidth="200.0" preserveRatio="true" pickOnBounds="true" y="65.0">
            <VBox.margin>
                <Insets left="2.0" right="2.0" />
            </VBox.margin>
            <Image fx:id="image" url="@../../../../medias/mos01.jpg" />
        </ImageView>
    </children>
</VBox>
