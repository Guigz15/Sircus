<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>
<DialogPane xmlns="http://javafx.com/javafx/14.0.2.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.polytech.sircus.controller.PopUps.PatientCalibrationPopup">
   <content>
      <BorderPane>
         <center>
            <VBox alignment="CENTER_LEFT" spacing="20.0" BorderPane.alignment="CENTER_LEFT">
               <CheckBox fx:id="randomizeTarget" mnemonicParsing="false" text="Mélanger aléatoirement l'ordre des cibles" />
               <HBox alignment="CENTER" spacing="80.0">
                  <VBox maxHeight="-Infinity" spacing="3.0">
                     <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Couleur d'arrière plan" />
                     <ColorPicker fx:id="backgroundColor" maxWidth="-Infinity" prefWidth="120.0" />
                  </VBox>
                  <VBox maxHeight="-Infinity" spacing="3.0">
                     <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nombre de cibles" />
                     <ComboBox fx:id="targetNumber" maxWidth="-Infinity" prefWidth="100.0" />
                  </VBox>
               </HBox>
               <VBox spacing="10.0">
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Type de cible :" />
                  <HBox alignment="CENTER" spacing="20.0">
                     <VBox alignment="TOP_CENTER" spacing="5.0">
                        <RadioButton fx:id="pointButton" mnemonicParsing="false" selected="true" text="Point">
                           <toggleGroup>
                              <ToggleGroup fx:id="targetType" />
                           </toggleGroup>
                        </RadioButton>
                        <VBox fx:id="targetBox" spacing="5.0">
                           <StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                                      minWidth="-Infinity" prefHeight="110.0" prefWidth="110.0">
                              <Circle fx:id="target" radius="20.0" stroke="BLACK" strokeType="INSIDE"
                                      strokeWidth="0.0"/>
                              <Circle radius="5.0" stroke="BLACK" strokeType="INSIDE"/>
                           </StackPane>
                           <VBox minHeight="-Infinity" spacing="5.0">
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Couleur de la cible :"/>
                              <ColorPicker fx:id="targetColor" prefWidth="110.0">
                                 <value>
                                    <Color/>
                                 </value>
                              </ColorPicker>
                           </VBox>
                        </VBox>
                     </VBox>
                     <VBox alignment="TOP_CENTER" spacing="5.0">
                        <RadioButton fx:id="imageButton" mnemonicParsing="false" text="Image" toggleGroup="$targetType" />
                        <ImageView fx:id="targetImage" fitHeight="110.0" fitWidth="110.0" pickOnBounds="true" preserveRatio="true" />
                     </VBox>
                     <VBox alignment="TOP_CENTER" spacing="5.0">
                        <RadioButton fx:id="videoButton" mnemonicParsing="false" text="Video" toggleGroup="$targetType" />
                        <MediaView fx:id="targetVideo" fitHeight="110.0" fitWidth="110.0" pickOnBounds="true" />
                     </VBox>
                  </HBox>
               </VBox>
            </VBox>
         </center>
      </BorderPane>
   </content>
   <ButtonType fx:constant="FINISH" />
   <ButtonType fx:constant="CANCEL" />
</DialogPane>
