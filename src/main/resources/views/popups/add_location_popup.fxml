<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="200.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/14.0.2.1" xmlns:fx="http://javafx.com/fxml/1">
   <VBox prefHeight="200.0" prefWidth="500.0">
      <HBox alignment="CENTER" prefHeight="80.0" prefWidth="500.0">
         <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="250.0">
            <HBox.margin>
               <Insets left="30.0" />
            </HBox.margin>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Pays">
               <font>
                  <Font size="16.0" />
               </font>
            </Text>
            <ComboBox fx:id="country" editable="true" prefHeight="26.0" prefWidth="200.0" />
         </VBox>
         <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="250.0">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ville">
               <font>
                  <Font size="16.0" />
               </font>
            </Text>
            <TextField fx:id="city" maxWidth="200.0" />
         </VBox>
      </HBox>
      <HBox prefHeight="52.0" prefWidth="500.0">
         <VBox prefHeight="200.0" prefWidth="250.0">
            <HBox.margin>
               <Insets left="30.0" />
            </HBox.margin>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Rue">
               <font>
                  <Font size="16.0" />
               </font>
            </Text>
            <TextField fx:id="street" maxWidth="200.0" />
         </VBox>
         <HBox prefHeight="200.0" prefWidth="250.0">
            <VBox prefHeight="200.0" prefWidth="100.0">
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="NÂ°">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Text>
               <TextField fx:id="streetNumber" maxWidth="70.0" />
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Code Postal">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Text>
               <TextField fx:id="postCode" />
            </VBox>
         </HBox>
      </HBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="470.0">
         <VBox.margin>
            <Insets right="30.0"/>
         </VBox.margin>
         <Button fx:id="cancelButton" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" text="Annuler" onAction="#cancelAdding">
            <font>
               <Font size="16.0"/>
            </font>
         </Button>
         <Button fx:id="addButton" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" text="Ajouter" onAction="#addingLocation">
            <HBox.margin>
               <Insets left="50.0"/>
            </HBox.margin>
            <font>
               <Font size="16.0"/>
            </font>
         </Button>
      </HBox>
   </VBox>
</AnchorPane>
