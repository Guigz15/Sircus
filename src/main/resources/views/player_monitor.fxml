                      <Label id="TotalDurationLabel" text="00:00" GridPane.columnIndex="1" />
                      <Label id="SeqLabel" text="00:00" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                      <Label id="TotalRemainingLabel" text="00:00" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                      <Label id="SeqRemainingLabel" text="00:00" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                      <Label text="Numéro de séquence" GridPane.rowIndex="4" />
                      <Label id="NumSeqLabel" text="0 / 0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  </GridPane>
                  <Label alignment="CENTER" text="Luminosité">
                      <VBox.margin>
                          <Insets top="5.0" />
                      </VBox.margin>
                  </Label>
                  <ProgressBar id="LuminosityProgressbar" prefWidth="200.0" progress="0.0" />
              </VBox>
            <VBox.margin>
               <Insets bottom="10.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
          </StackPane>
         <StackPane prefHeight="150.0" prefWidth="200.0">
            <children>
                <TextArea id="commentTextArea" fx:id="commentTextArea" minHeight="150.0" minWidth="200.0" promptText="Commentaires...">
                  <StackPane.margin>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </StackPane.margin>
                </TextArea>
                <Button fx:id="addCommButton" alignment="TOP_LEFT" mnemonicParsing="false" onMouseClicked="#addComment" text="+" StackPane.alignment="BOTTOM_LEFT">
                  <StackPane.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
