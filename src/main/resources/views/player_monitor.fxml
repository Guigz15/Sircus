                  </padding>
                  <Label text="Informations">
                      <font>
                          <Font name="System Bold" size="18.0" />
                      </font>
                  </Label>
                  <GridPane prefHeight="117.0" prefWidth="252.0">
                      <columnConstraints>
                          <ColumnConstraints hgrow="SOMETIMES" maxWidth="201.0" minWidth="10.0" prefWidth="197.0" />
