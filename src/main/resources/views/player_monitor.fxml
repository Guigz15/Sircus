                <viewport>
                    <Rectangle2D />
                </viewport>
            </MediaView>
        </StackPane>
        <StackPane maxHeight="-Infinity" maxWidth="-Infinity" style=" -fx-border-color:black; -fx-border-width: 1; -fx-border-style: solid;" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </GridPane.margin>
            <MediaView fx:id="viewerMedia" fitHeight="300.0" fitWidth="300.0" style=" -fx-border-color:black; -fx-border-width: 1; -fx-border-style: solid;" />
            <ImageView fx:id="viewerImage" fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER" />
        </StackPane>
        <Label text="Caméra">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label text="Aperçu" GridPane.columnIndex="1">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" maxHeight="55.0" prefHeight="100.0" prefWidth="200.0" spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </GridPane.margin>
            <Button fx:id="backButton" alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="35.0" onMouseClicked="#previousSequence">
                <graphic>
                    <FontIcon iconLiteral="fa-backward" iconSize="15" />
                </graphic>
            </Button>
            <Button fx:id="stopButton" alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="35.0" onMouseClicked="#stopViewer">
                <graphic>
                    <FontIcon iconLiteral="fa-stop" iconSize="15" />
                </graphic>
            </Button>
            <Button fx:id="playButton" alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="35.0" onMouseClicked="#playViewer">
                <graphic>
                    <FontIcon iconLiteral="fa-play" iconSize="15" />
                </graphic>
            </Button>
            <Button fx:id="forwardButton" alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="35.0" onMouseClicked="#nextSequence">
                <graphic>
                    <FontIcon iconLiteral="fa-forward" iconSize="15" />
                </graphic>
            </Button>
        </HBox>
    </GridPane>
   <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
      <children>
          <StackPane style="-fx-border-color: black; -fx-border-width: 1; -fx-border-style: solid;">
